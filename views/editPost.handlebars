<script src="/js/edit-post.js"></script>
    <div id="post" data-id="{{post.id}}">
        <header>
            <h1 class="title">Edit Post</h1>
        </header>
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" value="{{post.title}}" id="title" required>
            </div>
            <div class="form-group">
                <label for="comment_text">Content</label>
                <textarea class="form-control" id="comment_text" rows="4" cols="50" required>{{post.content}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" id="editPost">Edit</button>
            </div>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
